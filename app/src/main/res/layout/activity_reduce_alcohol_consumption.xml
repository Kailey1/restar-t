<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkblue"
    tools:context=".AlcoholUseActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#67A3CF"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="35dp"
                style="@style/yellowButton"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lora_bold"
                    android:text="Reducing Alcohol Consumption:"
                    android:textColor="@color/darkblue"
                    android:textSize="80px" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="left"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/darkblue"
                    android:fontFamily="@font/dm_sans_regular"
                    android:text="Easing off an addiction is difficult, here are some other ways to make it easier."
                    android:textSize="45px"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginVertical="30dp"

                    android:background="@color/darkblue"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkblue"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="Mix Weaker Drinks"
                    android:textSize="55px" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/darkblue"
                        android:fontFamily="@font/dm_sans_regular"
                        android:text="By mixing weaker drinks, you drink less alcohol as you progress to sobriety."
                        android:textSize="45px"/>
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_marginVertical="20dp"
                        android:src="@drawable/mix" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginVertical="30dp"
                    android:background="@color/darkblue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/clock" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        android:layout_marginLeft="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/darkblue"
                            android:fontFamily="@font/dm_sans_bold"
                            android:text="Space out Time between Drinks"
                            android:textSize="55px"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/darkblue"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/dm_sans_regular"
                            android:text="Spacing out drinks lowers the concentration of alcohol in your body at a given time."
                            android:textSize="45px"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginVertical="30dp"
                    android:background="@color/darkblue" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkblue"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="Donâ€™t drink your Preferred Alcoholic Drink"
                    android:textSize="55px"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="60dp">

                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop=" 15dp"
                        android:textColor="@color/darkblue"
                        android:fontFamily="@font/dm_sans_regular"
                        android:text="Drinking something you enjoy less can discourage you from overdrinking."
                        android:textSize="45px"/>
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/reducedrink"
                        android:layout_marginBottom="20dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>


</FrameLayout>