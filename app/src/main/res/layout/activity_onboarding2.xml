<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnboardingActivity2"
    android:background="@color/darkblue">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="restar-t"
            android:textSize="144px"
            android:layout_margin="50dp"
            android:fontFamily="@font/lora_bold"
            android:textColor="@color/white"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_baseline_arrow_back_ios_24"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="SUPPORT SYSTEM"
                android:textSize="72px"
                android:fontFamily="@font/dm_sans_bold"
                android:textColor="@color/white"/>

        </LinearLayout>
        <!--
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="add the email of someone \nyou trust"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp"
            android:textSize="48px"
            android:textColor="@color/white"
            android:fontFamily="@font/dm_sans_bold"/>
        <EditText
            android:id="@+id/onboarding_email"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="70dp"
            android:hint="email"
            android:fontFamily="@font/dm_sans_regular"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drink_spinner"/>
        -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="If you feel the urge to relapse, this support system allows you to shake your phone to send a text message or call someone you trust for support."
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="10dp"
            android:textSize="48px"
            android:textColor="@color/white"
            android:fontFamily="@font/dm_sans_regular"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="add the phone number of \nsomeone you trust"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="50dp"
            android:textSize="48px"
            android:textColor="@color/white"
            android:fontFamily="@font/dm_sans_bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="e.g. (123) 456 7890"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp"
            android:textSize="36px"
            android:textColor="@color/white"
            android:fontFamily="@font/dm_sans_regular"/>
        <EditText
            android:id="@+id/onboarding_sms"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="70dp"
            android:hint="email"
            android:paddingLeft="10dp"
            android:fontFamily="@font/dm_sans_regular"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drink_spinner"/>

        <Button
            android:id="@+id/onboarding2_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="next"
            android:gravity="left"
            android:layout_marginTop="90dp"
            android:layout_marginRight="-20dp"
            android:paddingVertical="25dp"
            android:paddingRight="80dp"
            android:paddingLeft="30dp"
            android:layout_gravity="right"
            style="@style/yellowButton"/>
    </LinearLayout>
    </ScrollView>


</FrameLayout>
