<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkblue"
    tools:context=".AlcoholUseActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#F7E4BA"

            app:cardCornerRadius="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="left"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkblue"
                    android:fontFamily="@font/lora_bold"
                    android:text="Services and
Resources"
                    android:textSize="64px"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="left"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:textColor="@color/darkblue"
                    android:fontFamily="@font/dm_sans_regular"
                    android:text="restar-t is best recommended to be used in conjunction with other services. Here are a selection of some services to help with addiction."
                    android:textSize="35px"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="170dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/darkblue" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="left"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="190dp"
                    android:textColor="@color/darkblue"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="Alcoholics Anonymous"
                    android:textSize="55px"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="225dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="40px"
                        android:layout_height="40px"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/web">

                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_gravity="left"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkblue"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/dm_sans_regular"
                        android:text="https://www.aa.org/"
                        android:textSize="35px"
                        android:textStyle="bold" />

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="left"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="255dp"
                    android:textColor="@color/darkblue"
                    android:fontFamily="@font/dm_sans_regular"
                    android:text="Fellowship of men and women who share their experience, and hope with each other that they may solve their common problem and help others to recover from alcoholism."
                    android:textSize="35px"
                    android:textStyle="bold" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="360dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/darkblue" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="left"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="380dp"
                    android:textColor="@color/darkblue"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="Kids Help Phone"
                    android:textSize="55px"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="415dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="40px"
                        android:layout_height="40px"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/phonefacingright">

                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_gravity="left"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkblue"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/dm_sans_regular"
                        android:text="1-800-668-6868"
                        android:textSize="35px"
                        android:textStyle="bold" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="left"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="450dp"
                    android:textColor="@color/darkblue"
                    android:fontFamily="@font/dm_sans_regular"
                    android:text="Not everyone who abuses substances is an adult. Kids Help Phone offers a 24 hr service geared specifically towards giving support to youth for substance abuse, and other issues."
                    android:textSize="35px"
                    android:textStyle="bold" />


            </RelativeLayout>



        </android.support.v7.widget.CardView>

    </RelativeLayout>


</LinearLayout>