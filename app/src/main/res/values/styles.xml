<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkblue</item>
        <item name="colorPrimaryDark">@color/darkblue</item>
        <item name="colorAccent">@color/yellow</item>
    </style>



    <style name="yellowButton">
        <item name="color">@color/darkblue</item>
        <item name="backgroundTint">@color/yellow</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/dm_sans_bold</item>
        <item name="android:textSize">48px</item>
    </style>

    <style name="SpinnerTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/dm_sans_medium</item>
    </style>

    <style name="inputTheme">
        <item name="editTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/dm_sans_medium</item>
    </style>

    <style name="NormalText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">48px</item>
        <item name="android:fontFamily">@font/dm_sans_regular</item>
    </style>
    <style name="title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">144px</item>
        <item name="android:fontFamily">@font/lora_bold</item>
        <item name="android:layout_margin">50dp</item>
    </style>
    <style name="subtitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">72px</item>
        <item name="android:fontFamily">@font/dm_sans_bold</item>
    </style>
    <style name="subheader">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">48px</item>
        <item name="android:fontFamily">@font/dm_sans_bold</item>
    </style>
    <style name="mood">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="splashpage">
        <item name="android:background">@drawable/splash</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginLeft">40dp</item>
    </style>
    <style name="FirebaseLogin" parent="FirebaseUI">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/splash</item>
    </style>

</resources>
